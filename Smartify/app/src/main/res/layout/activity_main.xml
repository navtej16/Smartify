<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="152dp"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="30dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewDesmartify"
        android:layout_width="387dp"
        android:layout_height="0dp"
        android:layout_marginBottom="302dp"
        android:foregroundGravity="bottom"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/desmartify" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="387dp"
        android:layout_height="0dp"
        android:layout_marginBottom="302dp"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/smartify" />



    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_blue"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:orientation="vertical"
        app:rowCount="2">

        <Button
            android:id="@+id/Flip"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_green"
            android:gravity="center_vertical"
            android:onClick="Flip"
            app:layout_column="0"
            app:layout_row="0" />
        <Button
            android:id="@+id/location"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_location"
            android:gravity="center_vertical"
            android:onClick="location"
            app:layout_column="1"
            app:layout_gravity="right"
            app:layout_row="0" />


        <Button
            android:id="@+id/autoRotate"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_auto_rotate"
            android:gravity="center_vertical"
            android:onClick="Rotate"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/earphone"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_earphone"
            android:gravity="center_vertical"
            android:onClick="Earphone"
            app:layout_column="1"
            app:layout_gravity="right"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>